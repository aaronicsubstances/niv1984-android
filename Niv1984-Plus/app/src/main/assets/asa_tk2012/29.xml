            <block_quote kind="LEFT_INDENTED">
                <content>w&#596; atemmuo bonhwa no mu;</content>
            </block_quote>
            <block_quote>
                <content>&#603;firi s&#603; AWURADE da no ab&#603;n,</content>
            </block_quote>
            <block_quote kind="LEFT_INDENTED">
                <content>atemmuo bonhwa no mu.</content>
            </block_quote>
            <content> </content>
        </verse>
        <verse num="15">
            <block_quote>
                <content> </content>
                <content> Owia ne &#596;srane aduru sum,</content>
            </block_quote>
            <block_quote kind="LEFT_INDENTED">
                <content>na nsoromma agyae haran.</content>
            </block_quote>
            <content> </content>
        </verse>
        <verse num="16">
            <block_quote>
                <content> </content>
                <content> Na AWURADE firi Sion bobom</content>
            </block_quote>
            <block_quote kind="LEFT_INDENTED">
                <content>na &#596;firi Yerusalem ma ne nne so,</content>
            </block_quote>
