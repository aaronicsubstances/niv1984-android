            <content kind="REF_VERSE_START">15</content>
            <content>: Yoel 2.1; Yes 13.6 </content>
        </note>
        <note kind="CROSS_REFERENCES">
            <content kind="REF_VERSE_START">16</content>
            <content>: Yoel 1.12; Deut 16.11 </content>
        </note>
        <note kind="CROSS_REFERENCES">
            <content kind="REF_VERSE_START">19</content>
            <content>: Yoel 2.3 </content>
        </note>
