<?xml version="1.0" encoding="UTF-8"?>
<book>
    <chapter num="1">
        <verse num="1">
            <content>AWURADE asɛm a ɛbaa Petuel ba Yoel nkyɛn nie.</content>
        </verse>
        <verse num="2">
            <block_quote>
                <content>Montie yei, mo mpanimfoɔ,</content>
            </block_quote>
            <block_quote kind="LEFT_INDENTED">
                <content>na monyɛ aso, mo asase sofoɔ nyinaa.</content>
            </block_quote>
            <block_quote>
                <content>Saa adeɛ yi aba mo berɛ so</content>
            </block_quote>
            <block_quote kind="LEFT_INDENTED">
                <content>anaa mo agyanom berɛ so pɛn?</content>
            </block_quote>
        </verse>
        <verse num="3">
            <block_quote>
                <content>Monka ɛho asɛm nkyerɛ mo mma,</content>
            </block_quote>
            <block_quote kind="LEFT_INDENTED">
                <content>na mo mma nka nkyerɛ wɔn mma,</content>
            </block_quote>
            <block_quote kind="LEFT_INDENTED">
                <content>na wɔn mma, nso nka nkyerɛ awoɔ ntoatoasoɔ a ɛdi soɔ no.</content>
            </block_quote>
        </verse>
        <verse num="4">
            <block_quote>
                <content>Deɛ aketekyire adi aka no,</content>
            </block_quote>
            <block_quote kind="LEFT_INDENTED">
                <content>ntutummɛ adi.</content>
            </block_quote>
            <block_quote>
                <content>Na deɛ ntutummɛ adi aka no,</content>
            </block_quote>
            <block_quote kind="LEFT_INDENTED">
                <content>mfuntie adi.</content>
            </block_quote>
            <block_quote>
                <content>Na deɛ mfuntie adi aka no,</content>
            </block_quote>
            <block_quote kind="LEFT_INDENTED">
                <content>mmɛbɛ adi.</content>
            </block_quote>
        </verse>
        <verse num="5">
            <block_quote>
                <content>Mo nsabofoɔ, monnyane na monsu,</content>
            </block_quote>
            <block_quote kind="LEFT_INDENTED">
                <content>na mo nsanomfoɔ nyinaa, montwa adwo,</content>
            </block_quote>
            <block_quote>
                <content>nsamono nti,</content>
            </block_quote>
            <block_quote kind="LEFT_INDENTED">
                <content>ɛfiri sɛ wɔatwa afiri mo anomu.</content>
            </block_quote>
        </verse>
        <verse num="6">
            <block_quote>
                <content> </content>
                <content> Na ɛdɔm bi atu aba m’asase so,</content>
            </block_quote>
            <block_quote kind="LEFT_INDENTED">
                <content>wɔn ho yɛ den na wɔn dodoɔ nni ano;</content>
            </block_quote>
            <block_quote>
                <content>wɔn se te sɛ gyata se,</content>
            </block_quote>
            <block_quote kind="LEFT_INDENTED">
                <content>na wɔwɔ gyatabereɛ nnyepi.</content>
            </block_quote>
        </verse>
        <verse num="7">
            <block_quote>
                <content>Wɔasɛe me bobe pasaa,</content>
            </block_quote>
            <block_quote kind="LEFT_INDENTED">
                <content>na wɔapempane me borɔdɔma mman;</content>
            </block_quote>
            <block_quote>
                <content>wɔawaewae ho hono agu,</content>
            </block_quote>
            <block_quote kind="LEFT_INDENTED">
                <content>na ne mman ho ahoa fitafitaa.</content>
            </block_quote>
        </verse>
        <verse num="8">
            <block_quote>
                <content>Twa adwo sɛ ababaa a ɔfira ayitoma</content>
            </block_quote>
            <block_quote kind="LEFT_INDENTED">
                <content>ma ne mmabaaberɛ mu kunu.</content>
            </block_quote>
        </verse>
        <verse num="9">
            <block_quote>
                <content> </content>
                <content> Wɔatwa aduane ayɛyɛdeɛ ne ahwiesa</content>
            </block_quote>
            <block_quote kind="LEFT_INDENTED">
                <content>afiri AWURADE fie;</content>
            </block_quote>
            <block_quote>
                <content>asɔfoɔ no,</content>
            </block_quote>
            <block_quote kind="LEFT_INDENTED">
                <content>AWURADE asomfo no, di abooboo.</content>
            </block_quote>
        </verse>
        <verse num="10">
            <block_quote>
                <content>Mfuo asɛe,</content>
            </block_quote>
            <block_quote kind="LEFT_INDENTED">
                <content>asase di abooboo,</content>
            </block_quote>
            <block_quote>
                <content>na aduane asɛe,</content>
            </block_quote>
            <block_quote kind="LEFT_INDENTED">
                <content>nsamono awe,</content>
            </block_quote>
            <block_quote kind="LEFT_INDENTED">
                <content>ngo so ate.</content>
            </block_quote>
        </verse>
        <verse num="11">
            <block_quote>
                <content>Akuafoɔ, mo ani nwu,</content>
            </block_quote>
            <block_quote kind="LEFT_INDENTED">
                <content>O nturoyɛfoɔ,</content>
            </block_quote>
            <block_quote>
                <content>ayuo ne atokoɔ nti montwa adwo,</content>
            </block_quote>
            <block_quote kind="LEFT_INDENTED">
                <content>ɛfiri sɛ mfuo mu aduanetwa asɛe.</content>
            </block_quote>
        </verse>
        <verse num="12">
            <block_quote>
                <content>Obobe akusa,</content>
            </block_quote>
            <block_quote kind="LEFT_INDENTED">
                <content>na borɔdɔma atwam,</content>
            </block_quote>
            <block_quote>
                <content>atoaa aba, abɛ nso ne aprɛ.</content>
            </block_quote>
            <block_quote kind="LEFT_INDENTED">
                <content>Petee mu nnua nyinaa akusa,</content>
            </block_quote>
            <block_quote>
                <content>ampa, anika atu</content>
            </block_quote>
            <block_quote kind="LEFT_INDENTED">
                <content>afiri nnipa mma mu.</content>
            </block_quote>
        </verse>
        <verse num="13">
            <block_quote>
                <content> </content>
                <content> Asɔfoɔ, momfira ayitoma na mommɔ bena,</content>
            </block_quote>
            <block_quote kind="LEFT_INDENTED">
                <content>afɔrebukyia asomfoɔ, montwa adwo,</content>
            </block_quote>
            <block_quote>
                <content>me Nyankopɔn asomfoɔ,</content>
            </block_quote>
            <block_quote kind="LEFT_INDENTED">
                <content>mommra mmɛda ayitoma mu anadwo nyinaa!</content>
            </block_quote>
            <block_quote>
                <content>na aduane ayɛyɛdeɛ ne ahwiesa agyae</content>
            </block_quote>
            <block_quote kind="LEFT_INDENTED">
                <content>mo Nyankopɔn fie ba.</content>
            </block_quote>
        </verse>
        <verse num="14">
            <block_quote>
                <content>Monyɛ abuadadie kronkron,</content>
            </block_quote>
            <block_quote kind="LEFT_INDENTED">
                <content>mompae asɔfoɔ nhyiamu,</content>
            </block_quote>
            <block_quote>
                <content>mommoa mpanimfoɔ ano,</content>
            </block_quote>
            <block_quote kind="LEFT_INDENTED">
                <content>asase sofoɔ nyinaa mmra</content>
            </block_quote>
            <block_quote>
                <content>AWURADE mo Nyankopɔn fie,</content>
            </block_quote>
            <block_quote kind="LEFT_INDENTED">
                <content>na monsu mfrɛ AWURADE.</content>
            </block_quote>
        </verse>
        <verse num="15">
            <block_quote>
                <content> </content>
                <content> Ao, ɛda no!</content>
            </block_quote>
            <block_quote>
                <content>Na AWURADE da no abɛn,</content>
            </block_quote>
            <block_quote kind="LEFT_INDENTED">
                <content>na ɛreba sɛ ɔsɛeɛ tumi afiri Otumfoɔ nkyɛn.</content>
            </block_quote>
        </verse>
        <verse num="16">
            <block_quote>
                <content> </content>
                <content> Wɔantwa aduane</content>
            </block_quote>
            <block_quote kind="LEFT_INDENTED">
                <content>amfiri yɛn anim,</content>
            </block_quote>
            <block_quote>
                <content>na anigyeɛ ne ahosɛpɛ</content>
            </block_quote>
            <block_quote kind="LEFT_INDENTED">
                <content>amfiri yɛn Nyankopɔn fie anaa?</content>
            </block_quote>
        </verse>
        <verse num="17">
            <block_quote>
                <content>Aba a wɔadua aporɔ ne nkofie mu,</content>
            </block_quote>
            <block_quote kind="LEFT_INDENTED">
                <content>aduanekora adan ada mpan,</content>
            </block_quote>
            <block_quote>
                <content>asan abubu,</content>
            </block_quote>
            <block_quote kind="LEFT_INDENTED">
                <content>na ayuo asɛe.</content>
            </block_quote>
        </verse>
        <verse num="18">
            <block_quote>
                <content>Hwɛ sɛ mmoadoma penepene,</content>
            </block_quote>
            <block_quote kind="LEFT_INDENTED">
                <content>anantwikuo rebrɛ,</content>
            </block_quote>
            <block_quote>
                <content>ɛfiri sɛ wɔnni adidibea;</content>
            </block_quote>
            <block_quote kind="LEFT_INDENTED">
                <content>nnwankuo nso tiri ato.</content>
            </block_quote>
        </verse>
        <verse num="19">
            <block_quote>
                <content> </content>
                <content> Wo, AWURADE, na mesu mefrɛ woɔ,</content>
            </block_quote>
            <block_quote>
                <content>na ogya ahye</content>
            </block_quote>
            <block_quote kind="LEFT_INDENTED">
                <content>ɛserɛ so wira mono,</content>
            </block_quote>
            <block_quote>
                <content>na ogyaframa ahye</content>
            </block_quote>
            <block_quote kind="LEFT_INDENTED">
                <content>petee mu nnua nyinaa.</content>
            </block_quote>
        </verse>
        <verse num="20">
            <block_quote>
                <content> </content>
                <content> Ewiram mmoa nso repere frɛ wo,</content>
            </block_quote>
            <block_quote kind="LEFT_INDENTED">
                <content>na nsuwansuwa awewe,</content>
            </block_quote>
            <block_quote>
                <content>na ogya ahye</content>
            </block_quote>
            <block_quote kind="LEFT_INDENTED">
                <content>ɛserɛ so wira mono.</content>
            </block_quote>
        </verse>
